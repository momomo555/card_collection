<h3>カードリスト新規作成</h3>
<%= form_with model: @card_list do |f| %>
  <table>
    <tr>
      <th>
        <%= f.label :title , "タイトル" %>
        <small>必須</small>
      </th>
      <td>
        <%= f.text_field :title, required: true %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :card_type , "カード種類" %>
      </th>
      <td>
        <%= f.text_field :card_type %>
      </td>
    </tr>
  </table>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div>
    <%= f.submit "作成" %>
  </div>
<% end %>
<%= link_to "カードリスト一覧へ戻る", card_lists_path, class: 'back-to-card-lists' %>
