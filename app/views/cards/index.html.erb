<h3>カード一覧</h3>
<%= link_to 'カード登録', new_card_list_card_path(@card_list.id), class: 'new-card' %>
<h4>カードリスト：<%= @card_list.title %></h4>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>レアリティ</th>
      <th>カード番号</th>
      <th>所持状態</th>
      <th>お気に入り</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= link_to card.name, card_list_card_path(@card_list.id, card.id), class: 'card-name' %></td>
        <td><%= card.rarity %></td>
        <td><%= card.number %></td>
        <td><%= card.owned ? "所持" : "未所持" %></td>
        <td><%= card.favorite ? "☆" : "" %></td>
        <td>
          <div class='table-actions'>
            <%= link_to '編集', edit_card_list_card_path(@card_list.id, card.id),class: 'edit-card' %>
            <%= button_to '削除', card_list_card_path(@card_list.id, card.id), class: 'delete-button' , method: :delete, data: { turbo_confirm: "本当に削除しますか？" } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @cards %>
