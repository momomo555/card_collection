<h3>カード一覧<h3>
<h4>カードリスト：<%= @card_list.title %></h4>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>レアリティ</th>
      <th>カード番号</th>
      <th>所持状態</th>
      <th>お気に入り</th>
    </tr>
  </thead>
  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.rarity %></td>
        <td><%= card.number %></td>
        <td><%= card.owned ? "所持" : "未所持" %></td>
        <td><%= card.favorite ? "☆" : "" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
