<% content_for :title do %>
  <%= @card.name %> - Card e-Binder
<% end %>
<% breadcrumb :show_card, [@card_list, @card] %>
<div class='card-actions'>
  <%= link_to '編集', edit_card_list_card_path(@card_list.id, @card.id), class: 'edit' %>
  <%= button_to '削除', card_list_card_path(@card_list.id, @card.id), class: 'delete' , method: :delete, data: { turbo_confirm: "本当に削除しますか？" } %>
</div>
<div class='show-card-wrapper'>
  <h2>カード詳細</h2>
  <h3>カードリスト：<%= @card_list.title %></h3>
  <div class='field'>
    <h4>名前</h4>
    <p><%= @card.name %></p>
  </div>
  <div class='field'>
    <h4>レアリティ</h4>
    <p><%= @card.rarity %></p>
  </div>
  <div class='field'>
    <h4>カード番号</h4>
    <p><%= @card.number %></p>
  </div>
  <div class='field'>
    <h4>メモ欄</h4>
    <p><%= safe_join(@card.memo.split("\n"),tag(:br)) %></p>
  </div>
  <div class='field'>
    <h4>所持状態</h4>
    <p><%= @card.owned ? "所持" : "未所持" %></p>
  </div>
  <div class='field'>
    <h4>お気に入り</h4>
    <p><%= @card.favorite ? "☆" : "" %></p>
  </div>
  <div class='field'>
    <h4>カード画像</h4>
    <% if @card.image.attached? %>
      <%= image_tag @card.image.variant(resize: "300") %>
    <% else %>
      <p>未登録</p>
    <% end %>  </div>
  <%= link_to "戻る", :back, class: 'back' %>
</div>
